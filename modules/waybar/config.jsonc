{
    "layer": "bottom",
    "position": "top",
    "margin-top": 10,
    "margin-left": 14,
    "margin-right": 14,
    "height": 24,
    "spacing": 2,

    "modules-left": ["custom/menu", "hyprland/workspaces", "hyprland/window"],
    "modules-center": ["custom/notification", "custom/clock", "custom/research", "custom/tasks"],
    "modules-right": ["cava", "mpris", "wireplumber", "memory", "cpu", "tray", "backlight", "battery", "custom/power"],

    "custom/menu": {
        "format": "    ",
        "on-click": "~/.dotfiles/modules/rofi/launch.sh",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "format": "<span size='large'>{icon}</span>",
        "on-click": "activate",
        "format-icons": {
            "1": "Û∞ñü",
            "2": "‚úé",
            "3": "Ó∑∫",
            "4": "Ó´Ñ",
            "5": "ÔÄÅ",
            "6": "ÔÑõ",
            // "active": "\uf444",
            "default": "\uf4c3"
        },
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": []
        }
    },

    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "^(.{60}).+": "$1...",
            "^(.{1,60})$": "$1"
        },
        "icon": true,
        "separate-outputs": true
    },

    "cava": {
        "framerate": 30,
        "autosens": 1,
        "sensitivity": 1,
        "bars": 10,
        "lower_cutoff_freq": 10,
        "higher_cutoff_freq": 10000,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.2,
        "input_delay": 2,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        "actions": {
                    "on-click-right": "mode"
                }
    },

    "mpris": {
        "format": "{player_icon}   {title}",
        "title-len": 30,
        "format-paused": "{status_icon} <i>{title}</i>",
        "player-icons": {
            "spotify": "ÔÜº",
            "ncspot": "ÔÜº",
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "interval": 1,
        "ignored-players": ["brave"]
    },

    "custom/research": {
        "exec": "~/.dotfiles/modules/waybar/scripts/research.sh",
        "interval": 1,
        "return-type": "json",
        "format": "  <span size='large'>Û∞ä™</span>    {}",
        "tooltip": true,
        "on-click": "obsidian"
    },

    "custom/tasks": {
        "exec": "~/.dotfiles/modules/waybar/scripts/tasks.sh",
        "interval": 1,
        "return-type": "json",
        "format": "  <span size='large'>ÔÄå</span>   {}",
        "tooltip": true,
        "on-click": "obsidian"
    },

    "custom/clock": {
        "format": "{}",
        "interval": 1,
        "exec": "~/.dotfiles/modules/waybar/scripts/clock.sh",
        "exec-if": "~/.dotfiles/modules/waybar/scripts/clock.sh check",
        "return-type": "json",
        "on-click": "~/.dotfiles/modules/waybar/scripts/clock.sh toggle",
        "signal": 1
    },

    "wireplumber": {
        "format": "\udb81\udd7e  {volume}%",
        "max-volume": 100,
        "scroll-step": 5,
        "on-click": "pavucontrol -t 3"
    },

    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "format": "{icon}   {capacity}%",
        "format-icons": ["\uf244", "\uf243", "\uf242", "\uf241", "\uf240"],
    },

    "backlight": {
        "format": "\udb80\udcdf  {percent}%",
        "scroll-step": 5,
    },

    "memory": {
        "interval": 1,
        "format": "ÓøÖ   {percentage}%"
    },

    "cpu": {
        "interval": 1,
        "format": "Ôãõ   {usage}%",
        "max-length": 10
    },

    "tray": {
        "icon-size": 16,
        "spacing": 16
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
          "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "none": "ÔÇ¢",
          "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-none": "Ôá∑",
          "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "inhibited-none": "ÔÇ¢",
          "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
      },

    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "wlogout"
    }
}
